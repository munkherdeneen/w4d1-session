<%- include('head.ejs') %>

    <h1>Shopping Cart Products</h1>
    <div class="container">
        <% for(var i=0; i < products.length; i++) { %>
            <div class="product-item">
                <p><a>
                        <%= products[i].name %>
                    </a>
                </p>
                <p>
                    <%= products[i].description %>
                </p>
                <span>
                    $<%= products[i].price %>
                </span>
                <p>
                    Quantity: <%= products[i].quantity %>
                </p>
				<p>
                    Total price: <%= products[i].totalprice %>
                </p>
            </div>
            <% } %>
    </div>
</body>	
</html>